<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageDrink"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageDrink"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Langt Drink Navn" />

    <TextView
        android:id="@+id/txtDrinkCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtDrinkName"
        app:layout_constraintTop_toBottomOf="@+id/txtDrinkName"
        tools:text="Lang Drink Kategori" />

    <TextView
        android:id="@+id/txtDrinkScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDrinkCat"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="7.8" />
</androidx.constraintlayout.widget.ConstraintLayout>